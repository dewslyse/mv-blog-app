<h1>Index of Users</h1>

<div>
  <% @users.each do |user| %>
    <%= link_to user_path(user) do %>
      <div>
        <%= image_tag(user.photo) %>
      </div>
      <div>
        <h2><%= user.name %></h2>
        <p>Number of posts: <%= user.posts_counter%></p>
      </div>
    <% end %>
  <% end %>
</div>
