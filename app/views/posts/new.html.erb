<h1>Create New Post</h1>

<%= form_with model: @post, url: user_posts_path(@user), data: { turbo: false } do |f| %>
  <p>
    <%= f.label :title %></br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :text %></br>
    <%= f.text_area :text %>
  </p>

  <p><%= f.submit %></p>
<% end %>
